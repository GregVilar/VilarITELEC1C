@model IEnumerable<Instructor>;

<div>Instructor List</div>

<a asp-action="AddInstructor" class="btn btn-primary">Add Instructor</a>
<table class="table table-dark">

    <tr>
        <th colspan="8">Instructor</th>
    </tr>

    <tr>
        <td>FirstName</td>
        <td>Lastname</td>
        <td>IsTenured</td>
        <td>DateHired</td>
        <td>Rank</td>
        <td>Show Details</td>
        <td>Update</td>
        <td>Delete</td>

    </tr>

    @foreach(var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            <td>@instructor.IsTenured</td>
            <td>@instructor.HiringDate</td>
            <td>@instructor.Rank</td>
            <td><a asp-action="ShowDetails" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" class="btn btn-primary" asp-route-id="@instructor.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-action="DeleteInstructor" asp-route-id="@instructor.Id">Delete</a></td>
        </tr>
    }
</table>