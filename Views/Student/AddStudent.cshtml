@{
}
@model Student;
<h1>Create a new student</h1>

<form asp-action="AddStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName">
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select class="form-control" asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))"> </select>
   </div>

    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input class="form-control" asp-for="AdmissionDate">
    </div>

    <div class="form-group">
        <label asp-for="Id">Student Id</label>
        <input class="form-control" asp-for="Id">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email">
    </div>

    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input class="form-control" asp-for="GPA">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>